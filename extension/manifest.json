{
  "manifest_version": 3,
  "name": "Safe Internet Coalition Extension",
  "description": "Extension for content filtering",
  "version": "0.0.1",
  "action": {
    "default_title": "Click to open extension popup",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["censor.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}